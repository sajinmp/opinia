<!DOCTYPE html>
<html>
<head>
  <title>Opinia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Opinia', root_path, class: 'navbar-brand' %>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Polls', polls_path %></li>
        <li><%= link_to 'Guestbook', guestbook_path %></li>
        <li><%= link_to 'Forums', forums_path %></li>
        <li><%= link_to 'Q & A', new_qna_path %></li>
      </ul>
      <ul class="user navbar-nav" style="float:right">
        <% if current_user %>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="container">
    <div class="inside">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <%= yield %>
    </div>
  </div>
  <div class = "footer">
    <nav class = "nav-footer">
      <ul>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Terms & Conditions", terms_path %></li>
        <li><%= link_to "Privacy Policy", privacy_path %></li>
      </ul>
    </nav>
  </div>
</body>
</html>
