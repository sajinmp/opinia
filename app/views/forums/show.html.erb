<h1><%= @forum.title %></h1>
<div class="contents">
  <p><%= @forum.content %></p>
</div>
<hr>
<div class="comments">
  <% if user_signed_in? %>
    <%= render 'shared/comment_form' %>
  <% end %>

  <div class="comment-display">
    <h3>Comments</h3>
    <ul class="comment-feed">
      <% @forum.comments.each do |comment| %> 
        <li><%= comment.reply %></li>
        <hr>
      <% end %>
    </ul>
  </div>
</div>
